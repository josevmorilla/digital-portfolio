{
  "name": "digital-portfolio",
  "version": "1.0.0",
  "description": "A fully dynamic, responsive, bilingual portfolio website with admin dashboard",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "cd backend && npx prisma migrate deploy && (node prisma/seed.js || echo 'Seed skipped') && node src/server.js",
    "dev": "nodemon backend/src/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "nodemon backend/src/server.js",
    "dev:db": "docker-compose up -d postgres",
    "dev:all": "npm run dev:db && concurrently \"npm:dev:backend\" \"npm:dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,magenta\"",
    "stop:db": "docker-compose down",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:migrate": "cd backend && npx prisma migrate dev",
    "prisma:seed": "node backend/prisma/seed.js",
    "prisma:studio": "cd backend && npx prisma studio",
    "prisma:reset": "cd backend && npx prisma migrate reset",
    "setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed"
  },
  "keywords": [
    "portfolio",
    "bilingual",
    "admin-dashboard",
    "express",
    "prisma",
    "react"
  ],
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "prisma": "^5.8.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
