{
  "name": "digital-portfolio",
  "version": "1.0.0",
  "description": "A fully dynamic, responsive, bilingual portfolio website with admin dashboard",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "node backend/src/server.js",
    "dev": "nodemon backend/src/server.js",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:migrate": "cd backend && npx prisma migrate dev",
    "prisma:seed": "node backend/prisma/seed.js",
    "prisma:studio": "cd backend && npx prisma studio",
    "setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed"
  },
  "keywords": ["portfolio", "bilingual", "admin-dashboard", "express", "prisma", "react"],
  "prisma": {
    "seed": "node backend/prisma/seed.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "prisma": "^7.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
